# 1. 何よりも先に「このキーボードはマウスである」とシステム全体に教え込む
config ZMK_MOUSE
	default y

config ZMK_POINTING
	default y

# 2. その上で左右共通の設定を書く
if SHIELD_CROSSES_LEFT || SHIELD_CROSSES_RIGHT

config ZMK_KEYBOARD_NAME
	default "ZMK-New"

config ZMK_SPLIT
	default y

endif

# 3. 左手は「子」として固定（これでBluetoothは1つになる）
if SHIELD_CROSSES_LEFT
config ZMK_SPLIT_BLE_ROLE_CENTRAL
	default n
endif

# 4. 右手は「親」として固定
if SHIELD_CROSSES_RIGHT
config ZMK_SPLIT_BLE_ROLE_CENTRAL
	default y
endif
