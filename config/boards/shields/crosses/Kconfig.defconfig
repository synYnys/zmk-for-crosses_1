# 1. システム全体でマウス機能を定義
config ZMK_MOUSE
    default y

config ZMK_POINTING
    default y

# 2. 【修正箇所】型(bool)を明示してエラーを回避
# これで左手(子)のデータを右手に送るルートを確保します
config ZMK_SPLIT_PERIPHERAL_HID_REPORT_TYPE_MOUSE
    bool
    default y

# 3. 共通設定
if SHIELD_CROSSES_LEFT || SHIELD_CROSSES_RIGHT
    config ZMK_KEYBOARD_NAME
        default "ZMK-New"

    config ZMK_SPLIT
        default y
endif

# 4. 左手(子)と右手(親)の役割を厳格に固定
if SHIELD_CROSSES_LEFT
    config ZMK_SPLIT_BLE_ROLE_CENTRAL
        default n
endif

if SHIELD_CROSSES_RIGHT
    config ZMK_SPLIT_BLE_ROLE_CENTRAL
        default y
endif
